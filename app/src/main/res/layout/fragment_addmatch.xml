<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtGameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Jogo"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtMatchDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data da Partida"
        android:inputType="date"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtNumberPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Jogadores"
        android:inputType="number"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duração (minutos)"
        android:inputType="number"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pontuação"
        android:inputType="number"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notas"
        android:inputType="textMultiLine"
        android:layout_marginBottom="12dp"
        />

    <Button
        android:id="@+id/btnSaveMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Partida" />
</LinearLayout>