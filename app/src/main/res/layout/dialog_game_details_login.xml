<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/gameDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/goToWebsiteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Website Login"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/goToDetailsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Details"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/addToMyGamesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar aos meus jogos"
        android:layout_marginTop="8dp"/>



    <Button
        android:id="@+id/closeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_marginTop="8dp"
        />
</LinearLayout>