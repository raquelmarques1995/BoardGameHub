<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_profile">
    <!-- Onde irá começar a aplicação (startDestination) -->

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.finalprojectandroid.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_games"
        android:name="com.example.finalprojectandroid.ui.games.GamesFragment"
        android:label="@string/title_games"
        tools:layout="@layout/fragment_games" />

    <fragment
        android:id="@+id/navigation_community"
        android:name="com.example.finalprojectandroid.ui.community.CommunityFragment"
        android:label="@string/title_community"
        tools:layout="@layout/fragment_community" />

    <fragment
        android:id="@+id/navigation_matches"
        android:name="com.example.finalprojectandroid.ui.matches.MyMatchesFragment"
        android:label="@string/title_matches"
        tools:layout="@layout/fragment_mymatches" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.finalprojectandroid.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/addMatchFragment"
        android:name="com.example.finalprojectandroid.ui.matches.AddMatchFragment"
        android:label="Adicionar Partida"
        tools:layout="@layout/fragment_addmatch" />

    <fragment
        android:id="@+id/matchDetailsFragment"
        android:name="com.example.finalprojectandroid.ui.matches.MatchDetailsFragment"
        android:label="Detalhes da Partida">
        <argument
            android:name="match_id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/EditMatchFragment"
        android:name="com.example.finalprojectandroid.ui.matches.EditMatchFragment"
        android:label="Edit Match"
        tools:layout="@layout/fragment_editmatch" />

    <fragment
        android:id="@+id/boardGameDetailsFragment"
        android:name="com.example.finalprojectandroid.ui.details.BoardGameDetailsFragment"
        android:label="Board Game Details"
        tools:layout="@layout/fragment_boardgame_details" />

</navigation>